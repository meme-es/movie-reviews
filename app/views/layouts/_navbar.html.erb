<header>
  <nav class="navbar">
    <div class="logo">
      <%= link_to image_tag("movestyle-brown", class: "img-logo"), root_path, class: "navbar-brand" %>
    </div>
    <% if session[:user_id] %>
      <div class="navbar-text">
        <p>Logged in as <strong><%= session[:user_name] %></strong></p>
      </div>
    <% end %>
    <div class="navbar-right">
      <a href="javascript:void(0);" id="toggle-menu" onclick="toggleMenu();">
        <span class="item-bar"></span>
        <span class="item-bar"></span>
        <span class="item-bar"></span>
      </a>
      <ul class="menu-bar">
        <li class="nav-item">
          <%= link_to 'Home', root_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Write a Review', new_review_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Categories', categories_path, class: 'nav-link' %>
        </li>
        <li>
          <span class='nav-separator'>|</span>
        </li>      
        <% if session[:user_id] %>          
          <li class="nav-item">
            <%= link_to 'Log Out', logout_path, class: 'nav-link' %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to 'Login', login_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Register', signup_path, class: 'nav-link' %>
          </li>
        <% end %>              
      </ul>
    </div>
  </nav>
</header>