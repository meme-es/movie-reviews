<!DOCTYPE html>
<html>
  <head>
    <title>MovieReviews</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
      <nav class="navbar">
        <a class="navbar-brand" href="/">MovieReviews</a>
        <span class="navbar-text">
          Logged in as <strong><%= current_user.name %></strong>
        </span>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon">the toggle</span>
        </button>
        <div class="navbar-collapse collapse float-right" id="collapsibleNavbar">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <%= link_to 'Write a Review', new_review_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Manage Categories', categories_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Log Out', logout_path, class: 'nav-link' %>
            </li>
          </ul>
        </div>
      </nav>
    <% end %>


    <% if notice %>
      <p class="notice-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert-danger"><%= alert %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
